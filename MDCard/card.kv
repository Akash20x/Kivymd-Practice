<MyLayout>:
    MDCard:
        focus_behavior: True
        focus_color: rgba(210,210,210,255)
        border_radius: dp(20)
        radius: [dp(10)]
        background: 'background2.png'
        orientation: "vertical"
        padding: "8dp"
        size_hint: None, None
        elevation:6
        size: "240dp", "240dp"
        pos_hint: {"center_x": .50, "center_y": .70}
        MDLabel:
            text: "MD Label"
            theme_text_color: "Secondary"
            size_hint_y: None
            height: self.texture_size[1]
        MDSeparator:
            height: "1dp"
        MDLabel:
            id:top
            text: "Train"
            halign:'center'
        BoxLayout:
            orientation:"horizontal"
            Image:
                source:'icon.png'
                pos_hint:{'center_x':0.5,'center_y':0.7}
                size_hint:[1,1]
                allow_stretch: True
            Image:
                source:'icon.png'
                pos_hint:{'center_x':0.9,'center_y':0.7}
                size_hint:[1,1]
                allow_stretch: True
        
        MDFillRoundFlatIconButton:
            text: "MDFillRoundFlatIconButton"
            icon: "language-python"
            text_color: rgba(125, 9, 245, 255)
            md_bg_color: rgba(113, 220, 86, 255)
            pos_hint: {"center_x": .50}
            on_press:root.my_callback()



        

    MDCard:
        id:card
        orientation:"vertical"
        size_hint:[0.8,0.40]
        pos_hint:{"center_x":0.50,"center_y":0.23}
        elevation:15
        md_bg_color : [206/255,241/255,251/255,1]
        padding:[15,50,15,20]
        spacing:15
        BoxLayout:
            orientation:"vertical"
            spacing:0
            padding:[15,10,15,10]
            MDLabel:
                id:label1
                text:"[color=1E045E][b]CARD 2[/b][/color]"
                markup:True
                size_hint:1,.1
                font_size: "30sp"
                halign:'center'
                pos_hint:{"top":1}
            MDLabel:
                id:label2
                text:" Press Button"
                markup:True
                halign:'center'
                size_hint:1,.1
                pos_hint:{"top":.60,"left":1}
        MDFillRoundFlatButton:
            text:"Back"
            size_hint:0.9,0.25
            pos_hint : {"center_x":.5}
            theme_text_color : "Custom"
            text_color : [0,0,0,1]
            