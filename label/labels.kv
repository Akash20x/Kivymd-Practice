<MyLayout>:
	BoxLayout:
    	orientation: "vertical"
        size:root.width,root.height
        MDLabel:
            id: top
            #text:"[color=50296a]SIGN IN[/color]"
        	text:"Mahine Learnin"
        	halign: "center"
        	theme_text_color: "Custom"
            text_color: 1, 0, 1, 1
            markup: True
            bold: True
            font_style: 'H3'
            #pos_hint:{"x":0.70}
         
        MDFlatButton:
		    text: "[color=#C13D21]Correct Spelling[/color]"
		    markup: True
		    #font_size: "30sp"
		    font_style: 'H2'
		    #font_name: "path/to/font"
		    pos_hint: {"center_y": .80}
		    on_press:root.my_callback()

        

        ScrollView:
        	MDList:
    			id: container

        IconLeftWidget:
			icon: "language-python"

		OneLineAvatarListItem:
	    	text: "Single-line item with avatar"

		


        MDIcon:
	        halign: "center"
	        icon: "language-python"
	        font_size : 120
	        pos_hint: {'center_x': 0.45, 'center_y': .45}




